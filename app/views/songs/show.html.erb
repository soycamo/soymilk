<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @song.name %>
</p>

<p>
  <b>Artist:</b>
  <%= @song.artist %>
</p>

<p>
  <b>Album:</b>
  <%= @song.album %>
</p>

<h2>Lyrics</h2>
<% @song.lyrics.each do |lyr|  %>
	<p><%= lyr.language %></p>
	<p><%= lyr.body %></p>
<% end %>

<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
